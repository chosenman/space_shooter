    function updateShipCoordinates(){

      if(Math.abs(Math.floor(spaceship.offsetLeft - prL)) > 0) {
        prL = spaceship.offsetLeft;
        socket.emit('gameCoordinateChange',{
          <% if(typeof(user) != 'undefined' ) { %>
            left: spaceship.offsetLeft,
            id: "<%= user.id %>"
            <% } %>
